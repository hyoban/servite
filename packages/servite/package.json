{
  "name": "servite",
  "version": "0.3.2",
  "description": "A vite plugin for React SSR / SSG / CSR",
  "keywords": [
    "vite-plugin",
    "ssr",
    "ssg",
    "csr"
  ],
  "author": "Codpoe <codpoe.me@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codpoe/servite.git"
  },
  "bugs": {
    "url": "https://github.com/Codpoe/servite/issues"
  },
  "homepage": "https://github.com/Codpoe/servite#readme",
  "type": "module",
  "files": [
    "bin",
    "dist",
    "server.d.ts",
    "client.d.ts",
    "global.d.ts"
  ],
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "exports": {
    ".": "./dist/node/index.js",
    "./client": "./dist/client/index.js"
  },
  "bin": {
    "servite": "bin/servite.js"
  },
  "scripts": {
    "dev": "pnpm run prebuild && rimraf dist && pnpm run copy && tsc -w",
    "prebuild": "tsx scripts/prebuild src/prebuild/*",
    "build": "pnpm run prebuild && rimraf dist && pnpm run copy && tsc",
    "copy": "tsx scripts/copy-client",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.3",
    "@types/fs-extra": "^11.0.3",
    "@types/lz-string": "^1.5.0",
    "@types/micromatch": "^4.0.4",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "cpy": "^11.0.0",
    "esbuild": "^0.19.5",
    "rollup": "^4.3.0",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "cac": "^6.7.14",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "gzip-size": "^7.0.0",
    "jest-docblock": "^29.7.0",
    "lz-string": "^1.5.0",
    "micromatch": "^4.0.5",
    "ora": "^7.0.1",
    "perfect-debounce": "^1.0.0",
    "picocolors": "^1.0.0",
    "react-helmet-async": "^1.3.0",
    "ufo": "^1.3.1",
    "upath": "^2.0.1"
  },
  "peerDependencies": {
    "defu": "^6.1.3",
    "h3": "^1.8.2",
    "nitropack": "^2.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0"
  }
}
